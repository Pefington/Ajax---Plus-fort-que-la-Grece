id = "#email-<%= @email.id %>"
container = document.querySelector("#show")
article = document.querySelector("article")

if (article) article.remove()

container.insertAdjacentHTML("beforeend", "<%= j render 'email', email: @email %>")

isRead = <%= @email.read %>

email = document.querySelector(id)
if (isRead) {
  email.classList.remove("unread")
  email.classList.add("read")
} else {
  email.classList.remove("read")
  email.classList.add("unread")
}
