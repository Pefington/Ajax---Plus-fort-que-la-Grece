<%= button_to "Generate email", emails_path, remote: true %>
<section class="w-full h-full flex border-2 border-slate-600 rounded-lg">
  <div id="index" class="flex flex-col min-w-[256px] h-full border-r border-slate-600 p-8">
    <h2 class="self-center">All emails</h2>
    <ul>
      <% @emails.each do |email| %>
        <% if email.read %>
          <li id="email-<%= email.id %>" class="read"><%= link_to email.object, email, remote: true %></li>
        <% else %>
          <li id="email-<%= email.id %>" class="unread"><%= link_to email.object, email, remote: true %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div id="show" class="flex flex-col items-center flex-1 h-full p-8">
    <h2>Selected email</h2>
  </div>
</section>
