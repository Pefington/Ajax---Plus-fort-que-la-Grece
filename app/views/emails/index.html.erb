
<%= button_to "Receive email", emails_path, class: "btn", remote: true %>
<section class="w-full h-full flex border-2 rounded-lg">
  <div class="flex flex-col flex-1 h-full border-r">
    <h2 class="self-center">All emails</h2>
    <ul>
      <% @emails.each do |email| %>
        <li class="my-4 mx-8 place-self-start text-lg"><%= email.object %></li>
      <% end %>
    </ul>
  </div>
  <div class="flex flex-col items-center flex-1 h-full">
    <h2>Selected email</h2>
  </div>
</section>
