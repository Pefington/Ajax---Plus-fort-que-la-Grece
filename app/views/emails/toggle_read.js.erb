id = "#email-<%= @email.id %>"
email = document.querySelector(id)
button = document.querySelector("div > a")
isRead = <%= @email.read %>

if (isRead) {
  email.classList.remove("unread")
  email.classList.add("read")
  button.textContent = "Mark Unread"
} else {
  email.classList.remove("read")
  email.classList.add("unread")
  button.textContent = "Mark as Read"
}
